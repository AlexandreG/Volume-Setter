<resources>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="colorPrimary">@color/global_primary_color</item>
        <item name="colorPrimaryDark">@color/global_primary_dark_color</item>
        <item name="colorAccent">@color/global_accent_color</item>
    </style>

    <style name="TitleCatTextViewStyle">
        <item name="android:paddingBottom">@dimen/title_padding</item>
        <item name="android:paddingTop">@dimen/title_padding</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/title_background</item>
    </style>

</resources>
